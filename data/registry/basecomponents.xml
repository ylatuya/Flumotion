<components>

  <component type="base">
    <source location="flumotion.server.component"/>
    <properties>
      <property name="nice" type="int"/>
      <property name="username" type="string"/>
    </properties>
  </component>

  <component type="producer" inherit="base">
    <source location="flumotion.components.producer"/>
    <properties>
      <property name="pipeline" type="string" required="yes"/>
      <property name="feed" type="string" multiple="yes"/>
    </properties>
  </component>

  <component type="converter" inherit="base">
    <source location="flumotion.components.converter"/>
    <properties>
      <property name="pipeline" type="string" required="yes"/>
      <property name="feed" type="string" multiple="yes"/>
      <property name="source" type="string" multiple="yes"/>
    </properties>
  </component>
  
  <component type="http-streamer">
    <source location="flumotion.components.http" inherit="base"/>
    <properties>
      <property name="source" type="string" required="yes"/>
      <property name="port" type="int" required="yes"/>
      <property name="logfile" type="string"/>
    </properties>
  </component>

  <component type="file-streamer">
    <source location="flumotion.components.file" inherit="base"/>
    <properties>
      <property name="source" type="string" required="yes"/>
      <property name="location" type="string" required="yes"/>
    </properties>
  </component>

</components>
