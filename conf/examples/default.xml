<?xml version="1.0" ?>
<!-- This is the default configuration generated by the wizard,
     except for this comment line -->
<planet>
  <flow name="default">
    <component name="producer-video" project="flumotion" type="videotest-producer" version="0.4.2.1" worker="localhost">

      <property name="format">video/x-raw-yuv</property>
      <property name="framerate">50/10</property>
      <property name="height">240</property>
      <property name="pattern">0</property>
      <property name="width">320</property>
    </component>

    <component name="overlay-video" project="flumotion" type="overlay-converter" version="0.4.2.1" worker="localhost">
      <eater name="default"><feed>producer-video</feed></eater>

      <property name="cc-logo">True</property>
      <property name="fluendo-logo">True</property>
      <property name="height">240</property>
      <property name="show-text">True</property>
      <property name="text">Fluendo</property>
      <property name="width">320</property>
      <property name="xiph-logo">True</property>
    </component>

    <component name="encoder-video" project="flumotion" type="theora-encoder" version="0.4.2.1" worker="localhost">
      <eater name="default"><feed>overlay-video</feed></eater>

      <property name="bitrate">400000</property>
    </component>

    <component name="producer-audio" project="flumotion" type="audiotest-producer" version="0.4.2.1" worker="localhost">

      <property name="frequency">440</property>
      <property name="samplerate">8000</property>
      <property name="volume">1.0</property>
    </component>

    <component name="encoder-audio" project="flumotion" type="vorbis-encoder" version="0.4.2.1" worker="localhost">
      <eater name="default"><feed>producer-audio</feed></eater>

      <property name="quality">0.5</property>
    </component>

    <component name="muxer-audio-video" project="flumotion" type="ogg-muxer" version="0.4.2.1" worker="localhost">
      <eater name="default">
        <feed alias="video">encoder-video</feed>
        <feed alias="audio">encoder-audio</feed>
      </eater>
    </component>

    <component name="http-audio-video" project="flumotion" type="http-streamer" version="0.4.2.1" worker="localhost">
      <eater name="default"><feed>muxer-audio-video</feed></eater>

      <property name="bandwidth-limit">10</property>
      <property name="burst-on-connect">True</property>
      <property name="client-limit">1024</property>
      <property name="mount-point">/</property>
      <property name="port">8800</property>
    </component>

  </flow>
</planet>
