<root>
  <component name="videotest-producer" type="producer">
    <pipeline>
      videotestsrc ! video/x-raw-yuv,width=320,height=240,framerate=5.0,format=(fourcc)I420
    </pipeline>
  </component>

  <component name="videotest-producer-big" type="producer">
    <pipeline>
      videotestsrc ! video/x-raw-yuv,width=640,height=480,framerate=2.0,format=(fourcc)I420
    </pipeline>
  </component>

  <component name="overlay" type="converter">
    <source>videotest-producer</source>
    <pipeline>
      filesrc location=/home/jdahlin/Pictures/alphacolors.png blocksize=100000 ! 
      pngdec ! alphacolor ! videomixer name=mix ! :default 
      @videotest-producer ! alpha ! mix.
    </pipeline>
  </component>

  <component name="jpeg+multipart" type="converter">
    <source>overlay</source>
    <pipeline>ffmpegcolorspace ! jpegenc ! multipartmux</pipeline>
  </component>

  <component name="jpeg+multipart-big" type="converter">
    <source>videotest-producer-big</source>
    <pipeline>ffmpegcolorspace ! jpegenc ! multipartmux</pipeline>
  </component>

  <component name="auth-1" type="htpasswd-auth">
    <filename>/home/jdahlin/htpasswd</filename>
    <!-- <auth-type>crypt</auth-type> -->
  </component>

  <component name="http-video" type="http-streamer">
    <source>jpeg+multipart</source>
    <port>8803</port>
    <logfile>/tmp/videotestsrc_access.log</logfile>
    <auth>auth-1</auth>
  </component>

  <component name="http-video-big" type="http-streamer">
    <source>jpeg+multipart-big</source>
    <port>8804</port>
    <logfile>/tmp/videotestsrc_access_big.log</logfile>
    <gst-property element="sink" name="buffers-max" type="int">400</gst-property>
    <auth>auth-1</auth>
  </component>

</root>
