<root>
  <workers policy="password">
    <worker username="johan" password="johan-pass" default="true"/>
    <worker username="thomas" password="thomas-pass"/>
    <worker username="thread" password="thread-pass"/>
    <worker username="tee" password="tee-pass"/>
  </workers>
  
  <component name="videotest-producer" type="videotest">
    <width>320</width>
    <height>240</height>
    <framerate>5.0</framerate>
  </component>

  <component name="png-overlay" type="overlay">
    <source>videotest-producer</source>
    <location>/tmp/overlay.png</location>
  </component>
  
  <component name="jpeg+multipart" type="multipartjpeg">
    <source>png-overlay</source>
  </component>

  <component name="jpeg+multipart-clean" type="multipartjpeg">
    <source>videotest-producer</source>
  </component>
<!--
  <component name="auth-1" type="htpasswd-auth">
    <filename>/home/jdahlin/htpasswd</filename>
    <auth-type>crypt</auth-type>
  </component>
-->

  <component name="http-video" type="http-streamer">
    <source>jpeg+multipart</source>
<!--
    <source path="/clean">jpeg+multipart-clean</source>
-->
    <port>8803</port>
    <logfile>/tmp/videotestsrc_access.log</logfile>
<!--    <auth>auth-1</auth> -->
    <maxclients>1</maxclients>
  </component>

  <component name="file-video" type="file-dumper">
    <source>jpeg+multipart</source>
    <auth-port>9999</auth-port>
    <location>/tmp/logg.raw</location>
  </component>
</root>
