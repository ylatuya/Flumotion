<registry>
  <components>
  
    <component type="ogg-muxer" base="flumotion/component/muxers">
      <source location="flumotion.component.muxers.ogg"/>
      <eater name="default"/>
      <feeder name="default"/>
      <entries>
        <entry type="component" location="ogg.py"
               function="Ogg"/>
      </entries>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="yes"/>
      </properties>
    </component>
  
    <component type="multipart-muxer" base="flumotion/component/muxers">
      <source location="flumotion.component.muxers.multipart"/>
      <feeder name="default"/>
      <eater name="default"/>
      <entries>
        <entry type="component" location="multipart.py"
               function="Multipart"/>
      </entries>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="yes"/>
      </properties>
    </component>
  
  </components>

  <bundles>

    <bundle name="muxers">
        <dependencies>
            <dependency name="component" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/muxers">
                <filename location="multipart.py" />
                <filename location="ogg.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
