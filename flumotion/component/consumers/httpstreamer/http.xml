<registry>
  <components>
    <component type="http-streamer">
      <source location="flumotion.component.consumers.httpstreamer.http"/>
      <properties>
        <property name="source" type="string" required="yes"/>
        <property name="port" type="int" required="yes"/>
        <property name="logfile" type="string"/>
        <property name="gst-property" type="xml" multiple="yes"/>
        <property name="admin-password" type="string"/>
        <property name="maxclients" type="int"/>
        <property name="bouncer" type="string"/>
        <property name="mount_point" type="string"/>
      </properties>
    </component>
  </components>
  <bundles>
    <bundle name="http-streamer-admin-gtk">
      <directories>
        <directory name="flumotion/component/consumers/httpstreamer">
          <filename location="http.glade" />
          <filename location="gtk.py" relative="foo/gtk.py"/>
        </directory>
      </directories>
    </bundle>
  </bundles>
</registry> 
