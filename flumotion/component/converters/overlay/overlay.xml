<registry>
  <components>
    <component type="overlay" base="flumotion/component/converters/overlay">
      <source location="flumotion.component.converters.overlay.overlay"/>
      <eater name="default"/>
      <feeder name="default"/>
      <entries>
        <entry type="component" location="overlay.py"
               function="createComponent" />
      </entries>
      <properties>
        <property name="source" type="string" multiple="no"/>
        <property name="text" type="string"/>
        <property name="show_text" type="bool"/>
        <property name="fluendo_logo" type="bool"/>
        <property name="cc_logo" type="bool"/>
        <property name="xiph_logo" type="bool"/>
        <property name="width" type="int" required="yes"/>
        <property name="height" type="int" required="yes"/>
      </properties>
    </component>

  </components>

  <bundles>

    <bundle name="overlay-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/converters/overlay">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="overlay-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="overlay-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/converters/overlay">
                <filename location="overlay.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
