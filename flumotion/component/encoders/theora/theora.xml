<registry>

  <components>
  
    <component type="theora-encoder" base="flumotion/component/encoders/theora"
               description="Encode a raw video feed using Xiph's Theora codec." >
      <source location="flumotion.component.encoders.theora.theora" />
      <eater name="default" />
      <feeder name="default" />
      <entries>
        <entry type="component" location="theora.py"
               function="Theora"/>
        <entry type="wizard" location="theora_wizard.py"
               function="TheoraWizardPlugin" />
      </entries>

      <properties>
        <property name="bitrate" type="int"
                  description="Bitrate to encode at (in bps)" />
        <property name="quality" type="int"
                  description="Encoding quality (0-63, if not using bitrate)" />
        <property name="keyframe-threshold" type="int" />
        <property name="keyframe-mindistance" type="int"
                  description="Minimum distance between keyframes (in frames)" />
        <property name="keyframe-maxdistance" type="int"
                  description="Maximum distance between keyframes (in frames)" />
        <property name="quick-compress" type="bool"
                  description="Whether to use quick, lower-quality compression"/>
        <property name="noise-sensitivity" type="int" />
        <property name="sharpness" type="int"
                  description="Sharpness encoder parameter: 0, 1, or 2"/>
      </properties>
    </component>
 
  </components>

  <bundles>

    <bundle name="theora-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/encoders/theora">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="theora-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="theora-base" />
            <dependency name="worker-checks" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/encoders/theora">
                <filename location="theora.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="theora-wizard">
        <dependencies>
            <dependency name="component" />
            <dependency name="theora-base" />
            <dependency name="encoding-wizard" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/encoders/theora">
                <filename location="theora_wizard.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
