<registry>
  <components>
  
    <component type="theora-encoder">
      <source location="flumotion.component.encoders.theora"/>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="no"/>
        <property name="bitrate" type="int"/>
        <property name="quality" type="int"/>
      </properties>
    </component>
  
    <component type="smoke-encoder">
      <source location="flumotion.component.encoders.smoke"/>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="no"/>
        <property name="qmin" type="int"/>
        <property name="qmax" type="int"/>
        <property name="threshold" type="int"/>
        <property name="keyframe" type="int"/>
      </properties>
    </component>
  
    <component type="jpeg-encoder">
      <source location="flumotion.component.encoders.jpeg"/>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="no"/>
        <property name="quality" type="int"/>
        <property name="framerate" type="float"/>
      </properties>
    </component>
  
    <component type="vorbis-encoder">
      <source location="flumotion.component.encoders.vorbis"/>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="no"/>
        <property name="bitrate" type="int"/>
	<property name="quality" type="int"/>
	<property name="channels" type="int"/>
      </properties>
    </component>
  
    <component type="speex-encoder">
      <source location="flumotion.component.encoders.speex"/>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="no"/>
        <property name="bitrate" type="int"/>
      </properties>
    </component>
  
    <component type="mulaw-encoder">
      <source location="flumotion.component.encoders.mulaw"/>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="source" type="string" multiple="no"/>
      </properties>
    </component>
  
  </components>
</registry> 
