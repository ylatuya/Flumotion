<registry>
  <plugs>
    <plug socket="flumotion.component.plugs.loggers.Logger"
          type="apachelogger">
      <entry location="flumotion/component/plugs/loggers.py"
             function="ApacheLogger"/>

      <properties>
        <property name="logfile" type="string" required="true"/>
      </properties>
    </plug>

    <plug socket="flumotion.component.plugs.adminaction.AdminAction"
          type="adminactionfilelogger">
      <entry location="flumotion/component/plugs/adminaction.py"
             function="AdminActionFileLogger"/>

      <properties>
        <property name="logfile" type="string" required="true"/>
      </properties>
    </plug>

    <plug socket="flumotion.component.plugs.lifecycle.ManagerLifecycle"
          type="managerlifecycleprinter">
      <entry location="flumotion/component/plugs/lifecycle.py"
             function="ManagerLifecyclePrinter"/>
    </plug>

    <plug socket="flumotion.component.plugs.lifecycle.ManagerLifecycle"
          type="manager-manhole-plug">
      <entry location="flumotion/component/plugs/manhole.py"
             function="ManagerManholePlug"/>

      <properties>
        <property name="ssh-authorized-keys-file" type="string" required="false"/>
        <property name="initially-open" type="bool" required="false"/>
        <property name="port" type="int" required="false"/>
      </properties>
    </plug>

    <plug socket="flumotion.component.plugs.identity.IdentityProvider"
          type="exampleidentityprovider">
      <entry location="flumotion/component/plugs/identity.py"
             function="ExampleIdentityProvider"/>
    </plug>

    <plug socket="flumotion.component.plugs.lifecycle.ComponentLifecycle"
          type="componentlifecycleprinter">
      <entry location="flumotion/component/plugs/lifecycle.py"
             function="ComponentLifecyclePrinter"/>
    </plug>

    <plug socket="flumotion.component.plugs.streamdata.StreamDataProvider"
          type="examplestreamdataprovider">
      <entry location="flumotion/component/plugs/streamdata.py"
             function="ExampleStreamDataProvider"/>

      <properties>
        <property name="description" type="string" required="true"/>
      </properties>
    </plug>

    <plug socket="flumotion.component.plugs.rrd.RRD" type="rrd">
      <entry location="flumotion/component/plugs/rrd.py"
             function="RRDPlug"/>
             
      <properties>
          <property name="timeout" type="int" required="false"
                    description="time (in seconds) to update the RRD files"/>
          <property name="clients-filename" type="string" required="true"
                    description="absolute path to the RRD clients file"/>
          <property name="bytes-filename" type="string" required="true"
                    description="absolute path to the RRD bytes transfered file"/>
      </properties>
    </plug>

  </plugs>

  <bundles>
    <bundle name="base-plugs">
      <dependencies>
        <dependency name="flumotion" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="__init__.py" />
          <filename location="base.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-loggers">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="loggers.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-adminaction">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="adminaction.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-lifecycle">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="lifecycle.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="plugs-manager-manhole">
      <dependencies>
        <dependency name="base-plugs-lifecycle" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="manhole.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-identity">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="identity.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-streamdata">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="streamdata.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-rrd">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="rrd.py" />
        </directory>
      </directories>
    </bundle>
  </bundles>
</registry>
