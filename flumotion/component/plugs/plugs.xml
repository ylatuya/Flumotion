<registry>
  <plugs>
    <plug socket="flumotion.component.plugs.loggers.Logger" type="apachelogger">
      <entry location="flumotion/component/plugs/loggers.py"
             function="ApacheLogger"/>

      <properties>
        <property name="logfile" type="string" required="true"/>
      </properties>
    </plug>

    <plug socket="flumotion.component.plugs.loggers.Logger"
          type="requeststringtoadminlogger">
      <entry location="flumotion/component/plugs/loggers.py"
             function="RequestStringToAdminLogger"/>
    </plug>

    <plug socket="flumotion.component.plugs.loggers.Logger" type="databaselogger">
      <entry location="flumotion/component/plugs/loggers.py"
             function="DatabaseLogger"/>

      <properties>
        <property name="database-module" type="string" required="True"/>
        <property name="feed-name" type="string"/>
        <property name="table" type="string"/>
        <property name="user" type="string"/>
        <property name="password" type="string"/>
        <property name="host" type="string"/>
        <property name="port" type="int"/>
        <property name="connect-timeout" type="int"/>
        <property name="database" type="string"/>
      </properties>
    </plug>
  </plugs>

  <bundles>
    <bundle name="base-plugs">
      <dependencies>
        <dependency name="flumotion" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="__init__.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="base-plugs-loggers">
      <dependencies>
        <dependency name="base-plugs" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/plugs">
          <filename location="loggers.py" />
        </directory>
      </directories>
    </bundle>
  </bundles>
</registry> 
