<registry>
  <components>
    <component type="porter"
               base="flumotion/component/misc/porter"
               description="A component that listens to a network port on behalf of other components (like http-streamer and http-server).">

      <source location="flumotion.component.misc.porter.porter"/>

      <entries>
        <entry type="component" location="porter.py"
               function="Porter"/>
      </entries>

      <properties>
        <property name="username" type="string"
                  description="username to authenticate to the porter" />
        <property name="password" type="string"
                  description="password to authenticate to the porter" />
        <property name="socket-path" type="string"
                  description="socket path to use to connect to the porter" />
        <property name="port" type="int"
                  description="network port for the porter to listen on" />
        <!-- when an admin asks, via getPorterDetails, what our port is, we will
             report this one. allows for e.g. iptables to redirect 80 -> 8800. -->
        <property name="iptables-port" type="int"
                  description="network port for the porter to report (useful when using iptables to redirect incoming 80 to 8800)" />
        <property name="interface" type="string"
                  description="IP address or hostname associated with the interface we want to listen on" />
        <property name="protocol" type="string"
                  description="porter protocol to use (defaults to flumotion.component.misc.porter.porter.HTTPPorterProtocol')" />
      </properties>
    </component>
  </components>

  <bundles>
    <bundle name="porter-base">
      <dependencies>
        <dependency name="component-base" />
      </dependencies>

      <directories>
        <directory name="flumotion/component/misc/porter">
          <filename location="__init__.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="porter">
      <dependencies>
        <dependency name="porter-base" />
      </dependencies>

      <directories>
        <directory name="flumotion/component/misc/porter">
	  <filename location="porter.py" />
	</directory>
      </directories>
    </bundle>
    <bundle name="porterclient">
      <dependencies>
        <dependency name="porter-base" />
      </dependencies>

      <directories>
        <directory name="flumotion/component/misc/porter">
	  <filename location="porterclient.py" />
	</directory>
      </directories>
    </bundle>
  </bundles>

</registry>

