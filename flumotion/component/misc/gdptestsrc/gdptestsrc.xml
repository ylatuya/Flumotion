<registry>

  <components>
  
    <component type="gdptestsrc" base="flumotion/component/misc/gdptestsrc">
      <source location="flumotion.component.misc.gdptestsrc.gdptestsrc"/>
      <feeder name="default"/>
      <entries>
        <entry type="component" location="gdptestsrc.py"
               function="GDPTestSrc"/>
      </entries>
      <properties>
        <property name="host" type="string"/>
        <property name="port" type="int"/>
      </properties>
    </component>
 
  </components>

  <bundles>

    <bundle name="gdptestsrc-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/misc/gdptestsrc">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="gdptestsrc-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="gdptestsrc-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/misc/gdptestsrc">
                <filename location="gdptestsrc.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
