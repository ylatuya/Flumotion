<registry>

  <components>
  
    <component type="httpfile" base="flumotion/component/misc/httpfile">
      <source location="flumotion.component.misc.httpfile.httpfile" />
      <entries>
        <entry type="component" location="httpfile.py"
               function="HTTPFileStreamer" />
      </entries>
      <sockets>
        <socket type="flumotion.component.plugs.loggers.Logger"/>
        <socket type="flumotion.component.plugs.streamdata.StreamDataProvider"/>
      </sockets>
      <properties>
        <property name="port" type="int" />
        <property name="hostname" type="string" />
         <!-- Warning: mount_point of / is broken -->
        <property name="mount_point" type="string" />
        <property name="path" type="string" required="true" />
        <property name="type" type="string" />

        <property name="bouncer" type="string" />
        <property name="issuer" type="string" />
		
        <!-- If type is 'slave' -->
        <property name="porter_socket_path" type="string" />
        <property name="porter_username" type="string" />
        <property name="porter_password" type="string" />
      </properties>
    </component>
 
  </components>

  <bundles>

    <bundle name="httpfile-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/misc/httpfile">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="httpfile-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="base-component-http" />
            <dependency name="httpfile-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/misc/httpfile">
                <filename location="httpfile.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
