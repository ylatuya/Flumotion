<registry>
  <components>
    <component type="videotest"
               base="flumotion/component/producers/videotest">
      <source location="flumotion.component.producers.videotest.videotest"/>

      <feeder name="default"/>

      <entries>
        <entry type="component" location="videotest.py"
               function="VideoTest"/>
        <entry type="admin/gtk" location="admin_gtk.py"
               function="GUIClass"/>
        <entry type="admin/text" location="admin_text.py"
               function="UIClass"/>
      </entries>

      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="height" type="int"/>
        <property name="width" type="int"/>
        <property name="framerate" type="fraction"/>
        <property name="format" type="string"/>
        <property name="pattern" type="int"/>
      </properties>
    </component>
  </components>

  <bundles>

    <bundle name="videotest-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/videotest">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="videotest-admin-gtk">
      <dependencies>
        <dependency name="videotest-base" />
        <dependency name="base-admin-gtk" />
      </dependencies>

      <directories>
        <directory name="flumotion/component/producers/videotest">
          <filename location="admin_gtk.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="videotest-admin-text">
      <dependencies>
        <dependency name="videotest-base" />
        <dependency name="base-admin-text" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/producers/videotest">
           <filename location="admin_text.py" />
        </directory>
      </directories>
    </bundle>
    <bundle name="videotest-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="videotest-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/videotest">
                <filename location="videotest.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
