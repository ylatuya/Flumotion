<registry>

  <components>
    <component type="audiotest" base="flumotion/component/producers/audiotest">
      <source location="flumotion.component.producers.audiotest.audiotest"/>
      <feeder name="default"/>
      <entries>
        <entry type="component" location="audiotest.py"
               function="AudioTest"/>
      </entries>
      <properties>
        <property name="feed" type="string" multiple="yes"/>
        <property name="volume" type="float"/>
        <property name="rate" type="int"/>
        <property name="freq" type="int"/>
      </properties>
    </component>
  </components>


  <bundles>

    <bundle name="audiotest-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/audiotest">
                <filename location="__init__.py" />
            </directory>
        </directories>
    </bundle>

    <bundle name="audiotest-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="audiotest-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/audiotest">
                <filename location="audiotest.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
