<registry>
  <components>
    <component type="soundcard-producer"
    	       base="flumotion/component/producers/soundcard"
               description="Capture a raw audio feed from a soundcard.">
      <source location="flumotion.component.producers.soundcard.soundcard" />

      <feeder name="default"/>

      <synchronization required="yes" clock-priority="150"/>

      <entries>
        <entry type="component" location="soundcard.py"
               function="Soundcard"/>
        <entry type="admin/gtk" location="admin_gtk.py"
               function="GUIClass"/>
      </entries>
      <properties>
        <property name="source-element" type="string"
                  description="The GStreamer element factory to use as source" />
        <property name="device" type="string"
                  description="The device property to use for the source element" />
        <property name="channels" type="int"
                  description="Number of channels to capture (default 2)" />
        <property name="depth" type="int"
                  description="Bit depth to use (default 16)" />
        <property name="rate" type="int"
                  description="Samplerate to capture at (in Hz, default 44100)" />
        <property name="input-track" type="string"
	          description="The label of the input track to be used for recording (default is to use whatever is currently set)" />
      </properties>
    </component>
  </components>

  <bundles>
    <bundle name="soundcard-base">
        <dependencies>
            <dependency name="component-base" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/soundcard">
                <filename location="__init__.py" />
            </directory>
        </directories>
     </bundle>

     <bundle name="soundcard-admin-gtk">
        <dependencies>
            <dependency name="soundcard-base" />
            <dependency name="base-admin-gtk" />
            <dependency name="volume-admin-gtk" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/soundcard">
                <filename location="admin_gtk.py"/>
            </directory>
        </directories>
     </bundle>

     <bundle name="soundcard-component">
        <dependencies>
            <dependency name="component" />
            <dependency name="soundcard-base" />
            <dependency name="volume-effect" />
            <dependency name="producer-checks" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/producers/soundcard">
                <filename location="soundcard.py" />
            </directory>
        </directories>
     </bundle>
  </bundles>
</registry> 
