import os

def get():
    try:
        homedir = os.environ['HOME']
        registrydir = os.path.join(homedir, '.flumotion')
        cachedir = os.path.join(homedir, '.flumotion')
        daemondir = homedir
        def ensure(path):
            try:
                os.listdir(path)
            except:
                os.makedirs(path)
        ensure(registrydir)
        ensure(cachedir)
    except KeyError:
        registrydir = os.path.join('@LOCALSTATEDIR@', 'cache', 'flumotion',
            '.flumotion')
        cachedir = os.path.join('@LOCALSTATEDIR@', 'cache', 'flumotion',
            '.flumotion')
        daemondir = os.path.join('@LOCALSTATEDIR@', 'cache', 'flumotion')
    except OSError, e:
        print 'Error making dir %s: %s' % (e.filename, e.strerror)
        print 'Things are probably going to break!'

    return {
        'isinstalled':   True,
        'cachedir':      cachedir,
        'configdir':     os.path.join('@SYSCONFDIR@', 'flumotion'),
        'daemondir':     daemondir,
        'gladedir':      os.path.join('@DATADIR@', 'flumotion', 'glade'),
        'imagedir':      os.path.join('@DATADIR@', 'flumotion', 'image'),
        'localedatadir': os.path.join('@DATADIR@'),
        'logdir':        os.path.join('@LOCALSTATEDIR@', 'log', 'flumotion'),
        'pythondir':     os.path.join('@LIBDIR@', 'flumotion', 'python'),
        'registrydir':   registrydir,
        'rundir':        os.path.join('@LOCALSTATEDIR@', 'run', 'flumotion'),
        'sbindir':       '@SBINDIR@',
        'version':       '@VERSION@',
    }
