<planet>

  <flow name="testflow">
    <component name="producer-video-test" type="pipeline-producer">
      <property name="pipeline">
  videotestsrc ! video/x-raw-yuv,width=320,height=240,framerate=5.0,format=(fourcc)I420
      </property>
    </component>
  
    <component name="converter-ogg-theora" type="pipeline-converter">
      <source>producer-video-test</source>
      <property name="pipeline">
  ffmpegcolorspace ! theoraenc keyframe-force=5 ! oggmux
      </property>
    </component>
  
    <component name="streamer-ogg-theora" type="http-streamer" worker="streamer">
      <source>converter-ogg-theora</source>
      <property name="port">8800</property>
      <property name="logfile">/tmp/ogg-test-theora.access.log</property>
    </component>
  </flow>

</planet>
