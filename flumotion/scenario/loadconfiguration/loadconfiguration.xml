<registry>
    <scenarios>
        <scenario type="loadconfiguration-scenario"
                  base="flumotion/scenario/loadconfiguration"
                  _description="Import an existing configuration.">
            <entries>
                <entry type="wizard" location="wizard_gtk.py"
                       function="LoadConfigurationAssistantPlugin" />
            </entries>
        </scenario>
    </scenarios>
    <bundles>
        <bundle name="loadconfiguration-scenario-base">
            <dependencies>
                <dependency name="scenario-base" />
                <dependency name="scenario-steps"/>
            </dependencies>
            <directories>
                <directory name="flumotion/scenario/loadconfiguration">
                    <filename location="wizard_gtk.py" />
                    <filename location="__init__.py" />
                </directory>
            </directories>
        </bundle>
    </bundles>
</registry>
