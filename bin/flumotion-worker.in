import os
import sys
sys.path.insert(0, '@PYGTK_DIR@')

import pygtk
pygtk.require('2.0')

import gobject
if gobject.pygtk_version < (2,3,96):
    print 'PyGTK 2.3.96 or higher is required'
    raise SystemExit
os.environ['PYGTK_USE_GIL_STATE_API'] = ''
gobject.threads_init()

# This can't be removed, 
dir = os.path.dirname(os.path.abspath(__file__))
if os.path.exists(os.path.join(dir, '.svn')):
    root = os.path.split(dir)[0]
else:
    root = os.path.join('@prefix@', 'lib', 'flumotion', 'python')
sys.path.insert(0, root)

# Install reactor
from flumotion.twisted import gstreactor
gstreactor.install()

from flumotion.common import errors, setup
from flumotion.worker.main import main

if __name__ == '__main__':
    setup.setup(root)

    try:
        sys.exit(main(sys.argv))
    except errors.SystemError, e:
        print 'ERROR:' + repr(e)
    except KeyboardInterrupt:
        print 'Ctrl-C received'
