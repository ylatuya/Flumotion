#!/usr/bin/python
# -*- Mode: Python -*-

import os
import sys
sys.path.insert(0, '@PYGTK_DIR@')

import pygtk
pygtk.require('2.0')

dir = os.path.dirname(os.path.abspath(__file__))
if os.path.exists(os.path.join(dir, '.svn')):
    root = os.path.split(dir)[0]
    gladedir = os.path.join(root, 'data', 'ui')
    datadir = os.path.join(root, 'data')
else:
    root = os.path.join('@prefix@', 'lib', 'flumotion', 'python')
    gladedir = os.path.join('@prefix@', 'share', 'flumotion', 'glade')
    datadir = os.path.join('@prefix@', 'share', 'flumotion')
sys.path.insert(0, root)

# This should probably go away
import __builtin__
__builtin__.GLADE_ROOT = gladedir 
__builtin__.DATA_DIR = datadir

from flumotion.server import launcher
from flumotion.twisted import errors

def main(args):
    return launcher.main(args)
    
if __name__ == '__main__':
    try:
        sys.exit(main(sys.argv))
    except errors.SystemError, e:
        print 'ERROR:', e

