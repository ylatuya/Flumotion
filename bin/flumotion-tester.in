import os
import sys
sys.path.insert(0, '@PYGTK_DIR@')

import pygtk
pygtk.require('2.0')

import gobject
if gobject.pygtk_version < (2,3,96):
    print 'PyGTK 2.3.96 or higher is required'
    raise SystemExit
gobject.threads_init()

from flumotion.utils import log
from flumotion.tester import client

# This can't be removed, 
dir = os.path.dirname(os.path.abspath(__file__))
if os.path.exists(os.path.join(dir, '.svn')):
    root = os.path.split(dir)[0]
else:
    root = os.path.join('@prefix@', 'lib', 'flumotion', 'python')
sys.path.insert(0, root)

def main(args):
    log.init()

    loop = gobject.MainLoop()
    try:
        url = sys.argv[1]
    except IndexError:
        print "please give a URL to test"
        sys.exit(1)

    factory = client.ClientFactory(loop, url, 200)
    gobject.idle_add(factory.run)

    log.log("going into main loop")
    loop.run()

    # we're done, print some info
    factory.stats()

if __name__ == '__main__':
    sys.exit(main(sys.argv))
